{
  "extends": ["airbnb", "next/core-web-vitals", "prettier"],
  "overrides": [
    {
      "files": ["**/*.js", "**/*.ts", "**/*.tsx"],
      "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".tsx"] }],
        "react/jsx-props-no-spreading": "off",
        "semi": "error",
        "max-len": [
          "error",
          {
            "code": 120,
            "ignoreStrings": true,
            "ignorePattern": "class=\"[^\"]*\""
          }
        ]
      }
    },
    {
      "files": ["tailwind.config.js"],
      "rules": {
        "import/no-extraneous-dependencies": "off"
      }
    }
  ]
}
